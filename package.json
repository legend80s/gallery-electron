{
  "name": "gallery",
  "productName": "Gallery",
  "version": "0.1.0",
  "description": "Local Gallery created with ❤️ and powered by Electron and React.js",
  "main": "./public/electron",
  "keywords": [],
  "author": {
    "name": "legend80s",
    "email": "chuanzongliu@gmail.com",
    "url": "https://github.com/legend80s"
  },
  "license": "ISC",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "npm run start:electron:dev",
    "start:electron:dev": "ELECTRON_ENV=development electron .",
    "start:electron:prod": "electron .",
    "start:react": "react-scripts start",
    "build:react": "rm -rf build && react-scripts build",
    "prepack": "npm run build:react",
    "pack": "electron-builder --dir",
    "prepackage": "npm run build:react",
    "package": "rm -rf dist && electron-builder build --mac --win --publish never",
    "prepackage:mac": "npm run build:react",
    "package:mac": "electron-builder build --mac --publish never",
    "prepackage:windowsx": "npm run build:react",
    "package:windows": "electron-builder build --win --publish never",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": "^7.0.1",
    "electron-builder": "^22.1.0",
    "node-sass": "^4.13.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-images": "^1.0.0",
    "react-photo-gallery": "^8.0.0",
    "react-scripts": "3.2.0",
    "react-toggle": "^4.1.1",
    "wait-on": "^3.3.0"
  },
  "dependencies": {
    "electron-storage-promised": "^1.1.0",
    "image-size": "^0.8.3",
    "is-image": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legend80s/gallery-electron.git"
  },
  "bugs": {
    "url": "https://github.com/legend80s/gallery-electron/issues"
  },
  "build": {
    "appId": "com.example.gallery",
    "mac": {
      "category": "Photo & Video"
    },
    "files": [
      "build/"
    ]
  }
}
